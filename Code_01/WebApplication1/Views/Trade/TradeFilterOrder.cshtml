<fieldset>
    <legend>Change order or filter</legend>
    @using (Ajax.BeginForm("SetFilterOrder", new AjaxOptions
    {
        UpdateTargetId = "results"
    }))
    {
        <h3>Show bids</h3>
        <p>
            <input type="checkbox" @(ViewBag.FilterOrder.Sale == "on" ? "checked" : "") name="Sale" />For sale
        </p>
        <p>
            <input type="checkbox" @(ViewBag.FilterOrder.Buy == "on" ? "checked" : "") name="Buy" />For buy
        </p>
        <p>
            <input type="checkbox" @(ViewBag.FilterOrder.Complete == "on" ? "checked" : "") name="Complete" />Completed
        </p>

        <h3>Select bids order </h3>
        <p>
            <input type="radio" value="date" @(ViewBag.FilterOrder.Order == "date" ? "checked" : "") name="Order" />Date
        </p>
        <p>
            <input type="radio" value="priceAsc" @(ViewBag.FilterOrder.Order == "priceAsc" ? "checked" : "") name="Order" />Price Ascending
        </p>
        <p>
            <input type="radio" value="priceDsc" @(ViewBag.FilterOrder.Order == "priceDsc" ? "checked" : "" ) name="Order" />Price Descending
        </p>

        <input name="OK" type="submit" value="Apply" />
    }
</fieldset>
