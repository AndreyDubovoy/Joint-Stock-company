<fieldset>
    <legend> Change order and filter</legend>
    @using (Ajax.BeginForm("SetFilterOrder", new AjaxOptions
    {
        UpdateTargetId = "results"
    }))
    {
        <h3>Select movements order </h3>
        <p>
            <input type="radio" value="true" @(ViewBag.FilterOrder.OrderDate == "true" ? "checked" : "") name="OrderDate" />Date
        </p>
        <p>
            <input type="radio" value="false" @(ViewBag.FilterOrder.OrderDate == "true" ? "" : "checked" ) name="OrderDate" />Amount
        </p>
        <h3>Select period for balance movements </h3>
        <p>
            <input type="radio" value="true" @(ViewBag.FilterOrder.AllDate == "true" ? "checked" : "") name="AllDate" />All days
        </p>
        <p>
            <input type="radio" value="false" @(ViewBag.FilterOrder.AllDate == "true" ? "" : "checked" ) name="AllDate" />Period
            <input type="date"
                   id="dateFrom"
                   name="dateFrom"
                   value=@(ViewBag.FilterOrder.DateFrom == null? DateTime.Today.ToString("yyyy-MM-dd") : ViewBag.FilterOrder.DateFrom)
                   max=@DateTime.Today.ToString("yyyy-MM-dd") />
            <input type="date"
                   id="dateTo"
                   name="dateTo"
                   value=@(ViewBag.FilterOrder.DateTo == null? DateTime.Today.ToString("yyyy-MM-dd") : ViewBag.FilterOrder.DateTo)
                   max=@DateTime.Today.ToString("yyyy-MM-dd") />
        </p>
        <h3>Filtered</h3>
        <p>
            <input type="checkbox" @(ViewBag.FilterOrder.Moving == "on" ? "checked" : "") name="Moving" />Moving
        </p>
        <p>
            <input type="checkbox" @(ViewBag.FilterOrder.Trade == "on" ? "checked" : "") name="Trade" />Trade
        </p>
        <p>
            <input type="checkbox" @(ViewBag.FilterOrder.Comission == "on" ? "checked" : "") name="Comission" />Comission
        </p>
        <p>
            <input type="checkbox" @(ViewBag.FilterOrder.Dividends == "on" ? "checked" : "") name="Dividends" />Dividends
        </p>
        <input name="OK" type="submit" value="Apply" />
        <input name="Cancel" type="submit" value="Cancel" />
    }
</fieldset>